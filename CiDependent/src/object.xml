<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


<bean id="e" class="com.techment.modal.Employee">  
<constructor-arg value="12" type="int"></constructor-arg>  
<constructor-arg value="Kingsman"></constructor-arg>  
<constructor-arg>  <ref bean="a"/>  </constructor-arg>  
</bean>  

<bean id="a" class="com.techment.modal.Address">  
<constructor-arg value="Jamshedpur"></constructor-arg>  
<constructor-arg value="Jharkhand"></constructor-arg>  
<constructor-arg value="India"></constructor-arg>  
</bean>  
  
  
</beans>